{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"strict": true,
		"allowJs": true,
		// "checkJs": true,
		"rootDir": ".",
		"outDir": "dist/",
		"baseUrl": ".",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"ts-node": {
		"esm": true,
		"require": [
			"tsconfig-paths/register"
		]
		// "experimentalSpecifierResolution": "node"
	},
	"include": [
		"./"
	],
	"exclude": [
		"/node_modules/",
		"/coverage/",
		"/dist/",
		"/package-lock.json/"
	],
}