{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node16",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"strict": true,
		"allowJs": true,
		// "checkJs": true,
		"rootDir": ".",
		"outDir": "dist/",
		"baseUrl": ".",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"include": [
		".",
	],
	"exclude": [
		"node_modules/",
		"coverage/",
		"dist/",
		"package-lock.json/"
	],
}